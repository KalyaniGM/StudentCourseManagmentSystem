@model IEnumerable<StudentCourseManagementSystem.Models.Course>
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<fieldset>
    <legend><b>Course Details</b></legend>
    <p>
        <a href="@Url.Action("AddCourse", "Course")">Add Course</a>
    </p>
    <table border="collapse" cellpadding="10">
        <tr>
            <div class="editor-label">
                <th>
                    @Html.DisplayNameFor(model => model.CourseCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayName("Action")
                </th>
            </div>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(model => item.CourseID)
                    @Html.DisplayFor(modelItem => item.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td class="editor-label">
                    @Html.ActionLink("Edit", "EditCourse", new { @id = @item.CourseID })|
                    @Html.ActionLink("Delete", "Delete", new { @id = @item.CourseID }, new { onclick = "return confirm('Are you sure you want to delete this course?');" }) 
                </td>
            </tr>
        }
    </table>
</fieldset>
